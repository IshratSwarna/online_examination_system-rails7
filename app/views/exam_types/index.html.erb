<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Exam types</h1>
    <%= turbo_frame_tag "new-exam_type-form", src: new_exam_type_path %>
  </div>

  <div class="min-w-full my-8">
    <div class="table font-bold min-w-full">
      <div>Name</div>
      <div>Status</div>
      <div></div>
    </div>

    <div id="exam_types">
      <%= render @exam_types %>
    </div>
  </div>
</div>
